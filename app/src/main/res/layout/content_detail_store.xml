<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailStoreActivity"
    tools:showIn="@layout/activity_detail_store">

    <ImageView
        android:id="@+id/imgMap"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="map/longitude/latitude" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgMap"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtStoreName"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="name"
                android:textStyle="bold"
                android:textColor="@color/oro"
                android:textSize="@dimen/abc_text_size_headline_material" />

            <TextView
                android:drawableLeft="@drawable/ic_place"
                android:id="@+id/txtStoreAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="address"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:gravity="left|center_vertical" />

            <TextView
                android:drawableLeft="@drawable/ic_local_phone"
                android:id="@+id/txtStorePhone"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="phone"

                android:textSize="@dimen/abc_text_size_body_1_material"
                android:gravity="center_vertical" />

            <TextView

                android:id="@+id/txtSalesPerson"
                android:drawableLeft="@drawable/ic_perm_identity"
                android:text="salesPerson
                            firstName  lastName
                            email"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:textSize="@dimen/abc_text_size_body_1_material"
                android:gravity="center_vertical" />

            <TextView
                android:drawableLeft="@android:drawable/ic_menu_info_details"
                android:id="@+id/txtStoreDescriptions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="descriptions"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:gravity="center_vertical" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
