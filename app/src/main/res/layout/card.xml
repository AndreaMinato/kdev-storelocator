<?xml version="1.0" encoding="utf-8"?><!-- layout di ogni cardview -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:id="@+id/contenuto">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome negozio"
                android:id="@+id/storeName"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indirizzo negozio"
                android:id="@+id/storeAddress"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/storeName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono negozio"
                android:id="@+id/storePhone"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/storeAddress"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>